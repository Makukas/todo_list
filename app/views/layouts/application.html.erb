<!DOCTYPE html>
<html>
  <head>
    <title>TodoList</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <div class = "top_nav">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to "TODO list", '#', { :class=>"navbar-brand" } %>
        </div>
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', '#' %></li>
          <li><%= link_to "Tasks", tasks_url %></li>
          <%if logged_in? && @current_user.accountRole == 'Employer' %>
          <li><%= link_to "New Task", new_task_url %></li>
          <%end%>
        </ul>
        <%if logged_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Profile", profile_url %></li>
          <li><%= link_to "Log out", logout_url %></li>
          <%else%>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Sign up", sign_up_url %></li>
            <li><%= link_to "Login", login_url %></li>
            <%end%>
          </ul>
        </div>
      </nav>
    </div>
    <body>
      <%= yield %>
    </body>
  </html>